<div{{ attributes }} class="row">
    <div class="col-md-2">
{#        {% include('product/form/search_form.html.twig') with {form: form} only %}#}
        <input
                type="number"
                data-model="category"
                placeholder="Results update as you type..."
                class="form-control"
        />
        <button data-action="live#$render">Filtrer</button>
    </div>
    <div data-loading="addClass(opacity-50)" class="col-md-10">
        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th class="w-auto">Nom</th>
                <th class="text-center">Quantité</th>
                <th class="text-center">Catégorie</th>
                <th class="text-center">Prix</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% if computed.products|length > 0 %}
                {% for product in computed.products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.name }}</td>
                        <td class="text-center">{{ product.quantity }}</td>
                        <td class="text-center">{{ product.category.name }}</td>
                        <td class="text-center">
                            <span class="text-info">{{ product.price | number_format(2, ',', ' ') }} €</span>
                        </td>
                        <td>
                            <a href="{{ path('app_product_delete', {'id': product.id}) }}" style="text-decoration: none">
                                <i class="fas fa-trash alert-danger"></i>
                            </a>
                            <a href="{{ path('app_product_edit', {'id': product.id}) }}" style="text-decoration: none">
                                <i class="fa fa-edit fa-md"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="5">Aucun donnée</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
        <div class="mt-2">
{#            {{ knp_pagination_render(products) }}#}
        </div>
    </div>
</div>