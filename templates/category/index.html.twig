{% extends 'base.html.twig' %}
{% set categoryPage = '' %}
{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <div class="mx-auto col-10 col-md-8 col-lg-6">
        <div class="row">
            <h4 class="text-center">Liste des catégories</h4>
            <div class="row">
                <div class="d-flex justify-content-end">
                    <a href="{{ path('app_category_new') }}">
                        <button class="btn btn-sm btn-secondary">Ajouter un nouveau catégorie</button>
                    </a>
                </div>
            </div>
            <hr class="mt-2">
            <div class="row">
                <div class="col-md-12">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td>{{ category.name }}</td>
                                <td>
                                    <a href="{{ path('app_category_delete', {'id': category.id}) }}" style="text-decoration: none">
                                        <i class="fas fa-trash alert-danger"></i>
                                    </a>
                                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" style="text-decoration: none">
                                        <i class="fa fa-edit fa-md"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">Aucun donnée</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="mt-2">
                        {{ knp_pagination_render(categories) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}